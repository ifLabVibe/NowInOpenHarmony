# NowInOpenHarmony Server 环境配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# 服务器配置
HOST=0.0.0.0
PORT=8001
LOG_LEVEL=INFO
DEBUG=false
ENABLE_SCHEDULER=true

# 数据库配置
# SQLite (默认，适合开发环境)
DATABASE_URL=sqlite:///./data/openharmony_news.db

# PostgreSQL (推荐生产环境)
# DATABASE_URL=postgresql://postgres:your_password@postgres:5432/openharmony_news
POSTGRES_PASSWORD=openharmony2025

# Redis配置 (可选)
REDIS_PASSWORD=redis2025
REDIS_URL=redis://:redis2025@redis:6379/0

# 爬虫配置
CRAWLER_DELAY=2
CRAWLER_TIMEOUT=30
CRAWLER_RETRY_COUNT=3

# Selenium/轮播图增强版配置
BANNER_USE_ENHANCED=true
# 如使用本地Chromium
CHROME_BIN=/usr/bin/chromium
CHROMEDRIVER_PATH=/usr/bin/chromedriver
# 是否传入 --user-data-dir（默认禁用以避免冲突）
SELENIUM_USE_USER_DATA_DIR=false
# 如使用远程浏览器容器（selenium/standalone-chromium），配置其地址
# 例如: http://selenium:4444/wd/hub
SELENIUM_REMOTE_URL=

# 安全配置
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# SSL配置 (HTTPS)
SSL_CERT_PATH=/app/ssl/cert.pem
SSL_KEY_PATH=/app/ssl/key.pem

# 监控配置
ENABLE_METRICS=true
METRICS_PORT=9090
